@model IEnumerable<UltimoIntento.Controllers.Condiciones_Pagos>

@{
    ViewBag.Title = "Index";
}

<h2>Condición de Pago</h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Create")
</p>

<form action="" method="get" class="navbar-form">
    <div class="form-group" align="center">
        <input type="text" id="Criterio" name="Criterio" class="form-control" /><br />
        <input type="submit" id="cmdBuscar" value="Buscar" class="form-control btn btn-success" />
    </div>
</form> <br />

<table class="table table-hover">
    <tr>
        <th>
            Descripcion
        </th>
        <th>
            Cantidad de Dias
        </th>
        <th>
            Estado
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cantidad_Dias)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Estado)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.IdCondicion }) |
            @Html.ActionLink("Detalle", "Details", new { id=item.IdCondicion }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.IdCondicion })
        </td>
    </tr>
}

</table>
